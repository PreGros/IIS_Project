{% extends 'base.html.twig' %}

{% block title %}Team info{% endblock %}

{% block body %}
    <h1>Team detail</h1>

    <h3>Team name: {{ team.name }}</h3>

    {{ render_flash_messages() }}

    <br></br>

    <h1>Members</h1>

    {% if canModify %}
        <h3>Add member</h3>

        {{ form_start(membersForm) }}
            {{ form_row(membersForm.members) }}
            {{ form_row(membersForm.submit) }}
        {{ form_end(membersForm) }}
    {% endif %}

    {{ table_render(table) }}

{% endblock %}
