{% extends 'base.html.twig' %}

{% block title %}Edit team{% endblock %}

{% block body %}
    {{ render_flash_messages() }}

    <h1>Edit team</h1>

    {{ form_start(teamForm) }}
        {{ form_row(teamForm.name) }}
        <label class="form-label">Current image</label>
        <div class="mb-3">
            <img src="{{ asset('uploads/teams/images/' ~ team.imagePath) }}" alt="Team image" class="img-thumbnail col-8 col-sm-6 col-md-4 col-lg-3">
        </div>
        {{ form_row(teamForm.image) }}
        {{ form_row(teamForm.submit, {
            label: 'Submit'
        }) }}
    {{ form_end(teamForm) }}
{% endblock %}
