<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <!-- in the <head> section -->
        {# <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/jq-3.6.0/dt-1.12.1/b-2.2.3/b-colvis-2.2.3/date-1.1.2/fc-4.1.0/fh-3.2.4/r-2.3.0/sc-2.0.7/sb-1.3.4/sp-2.0.2/sl-1.4.0/datatables.min.css"/>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script type="text/javascript" src="https://cdn.datatables.net/v/bs5/jq-3.6.0/dt-1.12.1/b-2.2.3/b-colvis-2.2.3/date-1.1.2/fc-4.1.0/fh-3.2.4/r-2.3.0/sc-2.0.7/sb-1.3.4/sp-2.0.2/sl-1.4.0/datatables.min.js"></script>         #}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {{ encore_entry_script_tags('main') }}
        {% endblock %}
    </head>
    <body>
      <nav class="navbar navbar-expand-lg navbar-light bg-dark navbar-dark shadow">
        <div class="container-fluid">
          <a class="navbar-brand" href="{{ path('homepage') }}">ü§å Petcalc reborn ü§å</a>
          <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-content">
            <div class="hamburger-toggle">
              <div class="hamburger">
                <span></span>
                <span></span>
                <span></span>
              </div>
            </div>
          </button>
          <div class="collapse navbar-collapse" id="navbar-content">
            <ul class="navbar-nav mr-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="{{ path('tournaments') }}">Tournaments</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="{{ path('teams') }}">Teams</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="{{ path('users') }}">Users</a>
              </li> 
            </ul>
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
              {% if not is_granted("IS_AUTHENTICATED_FULLY") %}
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="{{ path('app_register') }}">Register</a>
                </li>
              {% else %}
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="{{ path('user_info', { 'id': app.user.id }) }}"><i class="bi bi-person-circle"></i>{{ app.user.nickname }}</a>
                </li>
              {% endif %}
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="{% if is_granted("IS_AUTHENTICATED_FULLY") %}{{ path('app_logout') }}{% else %}{{ path('app_login') }}{% endif %}">{% if is_granted("IS_AUTHENTICATED_FULLY") %}Logout{% else %}Login{% endif %}</a>
              </li>
            </ul>

            {# <form class="d-flex ms-auto">
                <div class="input-group">
                    <input class="form-control border-0 mr-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-primary border-0" type="submit">Search</button>
                </div>
            </form> #}
          </div>
        </div>
      </nav>

      <div class"pt-8">
          <main>
              <div style="margin:1.5cm;margin-top:0.5cm">
                  {% block body %}{% endblock %}
              </div>
          </main>
          <footer style="position:fixed;bottom:0;">
              <div> Footer content here... </div>
          </footer>
      </div>
    </body>
</html>
