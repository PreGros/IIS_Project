{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1>Login</h1>

    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.password) }}
        <input type="hidden" name="_target_path" value="/datatable"/>
        {{ form_row(form.send, {
            label: 'Login'
        }) }}
    {{ form_end(form) }}
{% endblock %}
